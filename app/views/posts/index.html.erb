<% @posts.each do |post| %>
  <div>
    <div style="border:solid 1px #EAEAEA; border-radius:8px">
      <h2>Title: <%= post.title  %></h2>
      <h4>Name: <%= post.name  %></h4>
    </div>

    <div style="border:solid 1px #EAEAEA; border-radius:8px">
      <%= post.content  %>
    </div>
   
    <div style="border:solid 1px #EAEAEA; border-radius:8px; float:right">
      <%= link_to 'Show', post %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    </div>
  </div>
  <br>
  <br>
<% end %>
